export CODEDIR="$HOME/Projects"

[ ! -e "$CODEDIR" ] && mkdir -p "$CODEDIR"

export PAGER="/usr/bin/less"
export PATH="$HOME/bin:$CODEDIR/scripts:/sbin:$PATH"
export VISUAL="/usr/bin/vim"

alias be='bundle exec'
alias ga='git add'
alias gd='git diff'
alias gp='git push'
alias gpr='git pull --rebase'
alias gs="git status"
alias gu='git add -u'

function mv() {
  if [ "$#" -ne 1 ] || [ ! -f "$1" ]; then
    command mv "$@"
    return
  fi

  read -ei "$1" newfilename
  command mv -v -- "$1" "$newfilename"
}

function sunrisedeploy {
  ssh sunrise "cd src/code; git pull; ./deploy.sh"
}

# clearly this is terrible practice but I use it on my personal projects when I
# care more about pushing than good commit messages necesarily
function hack {
  git add -A .
  git commit -m "hack"
}


[[ -e "$HOME/.secret" ]] && \
  source "$HOME/.secret"

[[ -e "$HOME/.zsh/$(uname | tr '[A-Z]' '[a-z'])" ]] && \
  source "$HOME/.zsh/$(uname | tr '[A-Z]' '[a-z'])"

[[ -e "$HOME/.zsh/$(hostname -s | tr '[A-Z]' '[a-z'])" ]] && \
  source "$HOME/.zsh/$(hostname -s | tr '[A-Z]' '[a-z'])"

source "$CODEDIR/antigen.zsh"

antigen use oh-my-zsh

antigen bundles <<EOBUNDLES
aws
direnv
docker
docker-compose
gem
git
heroku
lein
pip
ruby
zsh-users/zsh-syntax-highlighting
EOBUNDLES

antigen theme dracula/zsh

antigen apply


alias mailr='msmtp-runqueue.sh'
alias mailq='msmtp-listqueue.sh'
